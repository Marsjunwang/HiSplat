{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Train HiSplat on ACID",
            "type": "python",
            "request": "launch",
            "module": "src.main_enhanced",
            "args": [
                "+experiment=acid",
                "data_loader.train.batch_size=2",
                "device=auto",
                "output_dir=EXP_SAVING_PATH",
                "trainer.val_check_interval=3000"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        },
        {
            "name": "Debug Demo (re10k)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": [
                "+experiment=re10k",
                "mode=test",
                "output_dir=temp",
                "checkpointing.load=./checkpoints/hisplat_re10k.ckpt"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        },
        {
            "name": "Debug Main (acid, batch2, workers0)",
            "type": "python",
            "request": "launch",
            "module": "src.main_enhanced",
            "args": [
                "+experiment=acid",
                "data_loader.train.batch_size=2",
                "data_loader.train.num_workers=0",
                "device=auto",
                "output_dir=EXP_SAVING_PATH"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        },
    ]
}